<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15sp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cmtUserPfp"
        android:layout_width="60sp"
        android:layout_height="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/cmtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="닉네임"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cmtUserPfp"
        />

    <TextView
        android:id="@+id/cmtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_grey"
        android:textSize="13sp"
        android:text="작성일"
        app:layout_constraintTop_toBottomOf="@id/cmtUserName"
        app:layout_constraintStart_toEndOf="@id/cmtUserPfp"
        />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:text="댓글 내용"
        app:layout_constraintTop_toBottomOf="@id/cmtDate"
        app:layout_constraintStart_toEndOf="@id/cmtUserPfp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>